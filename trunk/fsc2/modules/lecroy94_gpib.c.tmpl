int lecroy94_tmpl_get_trigger_coupling( int channel )
{
	char buf[ 40 ];
	long length = 40;
	int cpl = -1;


	fsc2_assert(    channel >= LECROY94_TMPL_CH1 
				 || channel == LECROY94_TMPL_CH2
#if defined LECROY94_TMPL_CH4_AS_TRG
				 || channel == LECROY94_TMPL_CH4
#endif
				 || channel == LECROY94_TMPL_LIN
#if defined LECROY94_TMPL_EXT
				 || channel == LECROY94_TMPL_EXT
#endif
#if defined LECROY94_TMPL_EXT10
				 || channel == LECROY94_TMPL_EXT10
#endif
			   );

	if ( channel == LECROY94_TMPL_CH1 || channel == LECROY94_TMPL_CH2
#if defined LECROY94_TMPL_CH4_AS_TRG
		 || channel == LECROY94_TMPL_CH4
#endif
	   )
		sprintf( buf, "C%1d:TRCP?", channel + 1 );
#if defined LECROY94_EXT
	else if ( channel == LECROY94_TMPL_EXT )
		strcpy( buf, "EX:TRCP?" );
#endif
#if defined LECROY94_EXT10
	else
		strcpy( buf, "EX10:TRCP?" );
#endif

	lecroy94_tmpl_talk( ( const char *) buf, buf, &length );

	switch ( buf[ 0 ] )
	{
		case 'A' :
			cpl = TRG_CPL_AC;
			break;

		case 'D' :
			cpl = TRG_CPL_DC;
			break;

		case 'L' :
			cpl = TRG_CPL_LF_REJ;
			break;

		case 'H' :
			cpl = buf[ 2 ] == 'R' ? TRG_CPL_HF_REJ : TRG_CPL_HF;
			break;

		default :
			lecroy94_tmpl_gpib_failure( );
	}

	return cpl;
}


