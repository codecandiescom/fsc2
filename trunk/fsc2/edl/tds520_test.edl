DEVICES:

tds540;


VARIABLES:

curve[ 2, * ];
I, J;


PREPARATIONS:

init_2d( 1, 0, 0, 0, 0.4 ns, 0, 1, "time [us]",
		 "BLA", "Intensity [V]" );

EXPERIMENT:

change_scale( 0, 1.0e6 * digitizer_timebase() / 50.0 );
digitizer_lock_keyboard( "ON" );


FOR I = 1 : 200 {
	digitizer_start_acquisition( );
	curve[ 1 ] = digitizer_get_curve( CH3 );
    display( 1, I, curve[ 1 ], 1 );
}

ON_STOP:

digitizer_run( );
FOR I = 1 : 10 {
	wait( 1 );
}