DEVICES:

hfs9000;    // pulser
tds540;     // digitizer


VARIABLES:

I, J;


ASSIGNMENTS:    // setup of pulser !

TIMEBASE:     5 ns;
TRIGGER_MODE: INTERNAL;

//TRIGGER_MODE: EXTERNAL, SLOPE = POS, LEVEL = 1.2 V;

MICROWAVE:    CHANNEL = A1, V_H = 2 V, V_L = 0 V, DELAY = 0 ns;
RF:           CH = A2;
RF_GATE:      CH = A3;
DETECTION:    CH = TRIGGER_OUT;


PREPARATIONS:

P0: FUNC   = MW,
	START  = 0 ns,
	LENGTH = 40 ns;

P1: FUNC   = MW,
	START  = P0.START + P0.LEN + 10 ns,
	LENGTH = 10 ns,
;//	DSTART = 10 ns,
//	DLEN   = 5 ns;
	

P2: FUNC   = MW,
	START  = 380 ns,
	LENGTH = 20 ns,
	DSTART = 20 ns,
;//	DLEN   = 10 ns;

P21: FUNC  = MW;
P22: FUNC  = MW;


P4: FUNC   = DETECTION,
	START  = 0 ns;

init_1d( 2, 0, 0, 1, "Time [ ns ]", "Voltage [ V ]" );

digitizer_trigger_position( 0.01 );
digitizer_record_length( 500 );
digitizer_num_averages( 10 );
pulser_show_pulses( );
pulser_dump_pulses( );


EXPERIMENT:

pulser_state( "on" );
change_scale( 0, digitizer_timebase( ) / 50 * 1e9 );

FOR J = 1 : 100 {

	FOR I = 1 : 16 {

		digitizer_start_acquisition();
		display( 1, digitizer_get_curve( CH3 ), 1,
				 1, digitizer_get_curve( CH4 ), 2 );
		pulser_shift( );
