VARIABLES:

m = 200.0;
f[ 4, 2 ] = { 0.0, 0.0, 0.0, m, m, m, m, 0.0 };
d = m;
v[ * ] = { 0.0, 0.0 }; //f[ 1 ];
vt;
I;
K[ 2 ];


PREPARATIONS:

init_2d( 1, round( m ), round( m ), 0, 1.0 / m, 0, 1.0 / m );

EXPERIMENT:

WHILE  d > 2 {
	FOR I = 1 : 4 {
		f[ I ] += v;
		K = round( f[ I ] + 1 );
		display( K[ 1 ] , K[ 2 ], I );
		vt = -1 * v[ 1 ];
		v[ 1 ] = v[ 2 ];
		v[ 2 ] = vt;
	}

	v = f[ 2 ] - f[ 1 ];
	d = sqrt( 2 * mean( v * v ) );
	v /= d;

	wait( 0.05 s );
}
