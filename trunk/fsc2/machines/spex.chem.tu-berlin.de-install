# $Id$

install-spex.chem.tu-berlin.de install-spex.mvl.local:
	$(MAKE) $(UNINSTALL_MACHINE)
	if [ !-e $(libdir)/rs_spec10.state ]; then \
		$(INSTALL) -m 644 -o $(OWNER) -g $(GROUP) \
		$(cdir)/rs_spec10.state $(libdir); \
	fi
	if [ ! -e $(libdir)/spex_cd2a.state ]; then \
		$(INSTALL) -m 644 -o $(OWNER) -g $(GROUP) \
		$(cdir)/spex_cd2a.state $(libdir); \
	fi
	-$(LN) $(LNFLAGS) $(libdir)/ni6601.so $(libdir)/counter.so
	-chown $(OWNER).$(GROUP) $(libdir)/counter.so

uninstall-spex.chem.tu-berlin.de uninstall-spex.mvl.local:
	-$(RM) $(RMFLAGS) $(libdir)/counter.so
