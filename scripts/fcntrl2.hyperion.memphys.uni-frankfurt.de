sub write_out {
    for ( @VARS ) {
        $_->{ value } = undef
            if $_->{ type } =~ /^(int|float)_empty/ and $_->{ value } eq '';
    }

    open my $fh, '|-:utf8', 'fsc2_' . lc $fsc2_how_to_run
        or die "Can't find utility fsc2_" . lc $fsc2_how_to_run . ".\n";

    my $TARGET_FREQ = $TARGET_FREQ{ value };

    print $fh "DEVICES:

hp5342a;
ffc;


VARIABLES:

target_freq = $TARGET_FREQ GHz;
cur_freq;
max_dev = 10 kHz;
I = 1;


PREPARATIONS:

init_1d( 1, \"\", \"Deviation [kHz]\" );


EXPERIMENT:

freq_counter_resolution( 10 kHz );

FOREVER {
	cur_freq = freq_counter_measure( );
	display_1d( I, ( cur_freq - target_freq ) / 1 kHz );
    I += 1;
    IF abs( target_freq - cur_freq ) > max_dev {
        freq_contr_change_freq( target_freq > cur_freq ? \"UP\" : \"DOWN\" );
    } ELSE {
		wait( 2 s );
	}
}
";
    close $fh;

    my $text;
    if ( $? != 0 ) {
        if ( $? >> 8 == 255 ) {
            $text = "Internal error.";
        } elsif ( $? >> 8 == 1 ) {
            $text = "Someone else is running fsc2.";
        } elsif ( $? >> 8 == 2 ) {
            $text = "fsc2 is already testing or\nrunning an experiment.";
        } elsif ( $? >> 8 == 3 ) {
            $text = "Internal error of fsc2.";
        } elsif ( $? >> 8 == 4 ) {
            $text = "Could not start fsc2.";
        } else {
            $text = "Something strange\nis going on here.";
        }

        &show_message( $text ) if $? >> 8 != 0;
    }
}


