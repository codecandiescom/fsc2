sub store_defs {
    my $fh;
    my $name = $0;

    $name =~ s|^.*?([^/]+)$|$1|;
    mkdir "$ENV{ HOME }/.fsc2", 0777 unless -e "$ENV{ HOME }/.fsc2";
    open $fh, '>:utf8', $ENV{ HOME } . "/.fsc2/$name" or return;
    print $fh "# Do not edit - created automatically!\n";

    if (    (     $TARGET_FREQ{ type } =~ /^float_empty$/o
              and $TARGET_FREQ{ value } eq '' )
         or (     $TARGET_FREQ{ value } ne ''
              and $TARGET_FREQ{ value } =~ /^[+-]?((\d+(\.(\d+)?)?)|(\.\d+))([eE][+-]?\d+)?$/o
              and ( defined $TARGET_FREQ{ max } ? $TARGET_FREQ{ max } >= $TARGET_FREQ{ value } : 1 )
              and ( defined $TARGET_FREQ{ min } ? $TARGET_FREQ{ min } <= $TARGET_FREQ{ value } : 1 ) ) ) {
        print $fh "$TARGET_FREQ{ value }\n";
    } else {
        print $fh "16.5\n";
    }

    print $fh "$fsc2_how_to_run\n";

    print $fh "$geom\n" if defined $geom;

    close $fh;
};


